---
export interface Props {
  title: string;
}

const { title } = Astro.props as Props;
---

<section class="max-w-lg mx-auto mb-60">
  <h1 class="font-cursive block text-center text-6xl font-semibold -mb-6 drop-shadow ">{title}</h1>
  <div class="bg-black/75 border-y border-neutral-400 rounded-xl p-4 shadow">
    <slot />
  </div>
</section>
